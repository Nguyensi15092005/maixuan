extends ../../layout/defaulManager.pug
include ../../mixins/alert.pug



block main 
  +alert-error(5000)
  +alert-success(5000)

  h2(class="mb-4") Chỉnh sửa khách hàng
  form(
    action=`${prefixAdmin}/khachhang/edit/${khachhang.id}?_method=PATCH`
    id="form-edit-khachhang"
    method="POST"
  ) 
    div(class="form-group")
      label(for="name") Tên khách hàng
      input(
        type="text"
        id="name"
        name="name"
        class="form-control"
        value=khachhang.name
        required
      )
    div(class="form-group")
      label(for="phone") Số điện thoại
      input(
        type="text"
        class="form-control"
        id="phone"
        name="phone"
        value=khachhang.phone
        required
      )
    div(class="form-group")
      label(for="inDebt") Nợ hiện tại
      input(
        type="number"
        class="form-control"
        id="inDebt"
        name="inDebt"
        value=khachhang.inDebt
      )
    div(class="form-group")
      button(
        type="submit"
        class="btn btn-primary"
      ) Submit