extends ../../layout/defaulManager.pug
include ../../mixins/alert.pug



block main 
  +alert-error(5000)
  +alert-success(5000)

  h2(class="mb-4") Thêm mới Nhà cung cấp
  form(
    action=""
    id="form-create-nhacungcap"
    method="POST"
  ) 
    div(class="form-group")
      label(for="title") Tên Nhà cung cấp
      input(
        type="text"
        id="title"
        name="title"
        class="form-control"
        required
      )
    div(class="form-group")
      label(for="phone") Số điện thoại
      input(
        type="text"
        class="form-control"
        id="phone"
        name="phone"
        required
      )
    div(class="form-group")
      label(for="christmas") Nợ cần trả
      input(
        type="number"
        class="form-control"
        id="christmas"
        name="christmas"
        value="0"
      )
    div(class="form-group")
      button(
        type="submit"
        class="btn btn-primary"
      ) Tạo mới