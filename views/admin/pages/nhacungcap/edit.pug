extends ../../layout/defaulManager.pug
include ../../mixins/alert.pug



block main 
  +alert-error(5000)
  +alert-success(5000)

  h2(class="mb-4") Chỉnh sửa Nhà cung cấp
  form(
    action=`${prefixAdmin}/nhacungcap/edit/${nhacungcap.id}?_method=PATCH`
    id="form-edit-nhacungcap"
    method="POST"
  ) 
    div(class="form-group")
      label(for="title") Tên Nhà cung cấp
      input(
        type="text"
        id="title"
        name="title"
        class="form-control"
        value=nhacungcap.title
        required
      )
    div(class="form-group")
      label(for="phone") Số điện thoại
      input(
        type="text"
        class="form-control"
        id="phone"
        name="phone"
        value=nhacungcap.phone
        required
      )
    div(class="form-group")
      label(for="christmas") Nợ cần trả
      input(
        type="number"
        class="form-control"
        id="christmas"
        name="christmas"
        value=nhacungcap.christmas
      )
    div(class="form-group")
      button(
        type="submit"
        class="btn btn-primary"
      ) Submit